<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_man"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView

                    android:textAlignment="center"
                    android:id="@+id/std_name"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashish Sapkota"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/std_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashishsapkota16@gmail.com"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/tvEditProfile"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:text="Edit Profile"
                    android:background="@drawable/edit_profile_bg"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>


            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginStart="5dp"

                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <ImageView
                        android:layout_marginBottom="15dp"

                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/matrix">

                    </ImageView>
                    <ImageView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/semester">

                    </ImageView>

                    <ImageView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/call">

                    </ImageView>
                    <ImageView
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_location_city_black_24dp">

                </ImageView>
                    <ImageView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_access_time_black_24dp">

                    </ImageView>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/std_matrix"
                        android:text="C30101170016"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"/>
                    <TableRow
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D2D2">

                    </TableRow>
                    <TextView
                        android:id="@+id/std_semester"
                        android:text="7th Semester"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TableRow
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D2D2"
                        android:layout_marginBottom="15dp">

                    </TableRow>
                    <TextView
                        android:id="@+id/std_number"
                        android:text="+977 9843618859"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"/>
                    <TableRow
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D2D2"
                        android:layout_marginBottom="15dp">

                    </TableRow>

                    <TextView
                    android:id="@+id/std_address"
                    android:text="Tarkeshwor 5 Bhoratar"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                    <TableRow
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D2D2"
                        android:layout_marginBottom="15dp">

                    </TableRow>

                    <TextView
                        android:id="@+id/std_addmission_date"
                        android:text="Tarkeshwor 5 Bhoratar"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"/>
                    <TableRow
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D2D2"
                        android:layout_marginBottom="15dp">

                    </TableRow>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>